---
// src/components/TeamMemberCard.astro
export interface Props {
  name: string;
  role: string;
  imageUrl: string;
  bio: string;
}

const { name, role, imageUrl, bio } = Astro.props;
---
<div class="text-center">
  <img class="mx-auto h-32 w-32 rounded-full object-cover" src={imageUrl} alt={name} />
  <h3 class="mt-6 text-xl font-semibold tracking-tight text-gray-900">{name}</h3>
  <p class="text-base font-semibold leading-7 text-primary">{role}</p>
  <p class="mt-2 text-sm text-slate-600">{bio}</p>
</div>