---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const formsparkEndpoint = "https://submit-form.com/ccJA8GLXm";
---
<BaseLayout title="Contact - Neurodiagnoses">
  <Header />
  <main class="mx-auto max-w-7xl px-4 py-16">
    <div class="text-center">
        <h1 class="text-4xl font-bold">Contact Us</h1>
        <p class="mt-4 text-lg text-slate-600">We'd love to hear from you. Reach out for collaborations, questions, or demos.</p>
    </div>
    <div class="mt-12 max-w-xl mx-auto">
        <form action={formsparkEndpoint} method="POST" class="grid gap-4">
            <div>
                <label for="name" class="block text-sm font-medium text-slate-700">Name</label>
                <input type="text" name="name" id="name" placeholder="Your Name" required class="mt-1 block w-full border border-slate-300 p-3 rounded-xl shadow-sm focus:ring-primary focus:border-primary">
            </div>
            <div>
                <label for="email" class="block text-sm font-medium text-slate-700">Email</label>
                <input type="email" name="email" id="email" placeholder="you@company.com" required class="mt-1 block w-full border border-slate-300 p-3 rounded-xl shadow-sm focus:ring-primary focus:border-primary">
            </div>
            <div>
                <label for="message" class="block text-sm font-medium text-slate-700">Message</label>
                <textarea name="message" id="message" placeholder="Your message..." rows="5" required class="mt-1 block w-full border border-slate-300 p-3 rounded-xl shadow-sm focus:ring-primary focus:border-primary"></textarea>
            </div>
            <button type="submit" class="w-full px-5 py-3 rounded-2xl bg-primary text-white font-semibold shadow-lg hover:shadow-xl transition-all">Send Message</button>
        </form>
    </div>
  </main>
  <Footer />
</BaseLayout>