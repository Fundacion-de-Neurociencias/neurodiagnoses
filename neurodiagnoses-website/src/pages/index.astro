---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FeatureCard from '../components/FeatureCard.astro';

const features = [
  { title: 'Explainable by Design', desc: 'XAI at feature and patient level (SHAP, counterfactuals, saliency maps).' },
  { title: 'Multimodal Fusion', desc: 'Integrates clinical, cognitive, imaging, and multi-omic data.' },
  { title: 'Subtype Discovery', desc: 'Anatomo‑cognitive subtypes support personalized prognosis.' },
  { title: 'Privacy‑Preserving', desc: 'On‑premise & edge‑ready options; full GDPR/HIPAA compliance.' },
];
---
<BaseLayout title="Neurodiagnoses — Explainable AI for Brain Health" description="Early detection and stratification of cognitive decline using explainable AI.">
  <Header />

  <main>
    <section class="mx-auto max-w-7xl px-4 py-20 lg:py-32 grid gap-10 md:grid-cols-2 items-center">
      <div>
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
          Explainable AI for Complex CNS Disorders
        </h1>
        <p class="mt-4 text-lg text-slate-600">
          Integrate multimodal data for precise diagnostics and support personalized care.
        </p>
        <div class="mt-8 flex gap-4">
          <a href="https://github.com/Fundacion-de-Neurociencias/neurodiagnoses" target="_blank" rel="noopener noreferrer" class="px-5 py-3 rounded-2xl bg-primary text-white font-semibold shadow-lg hover:shadow-xl transition-all">Explore on GitHub</a>
          <a href="https://huggingface.co/spaces/fneurociencias/Neurodiagnoses" target="_blank" rel="noopener noreferrer" class="px-5 py-3 rounded-2xl border border-slate-300 font-semibold hover:bg-slate-100 transition-colors">Launch Live App</a>
        </div>
      </div>
      <img src="/assets/img/hero-tridimensional.png" alt="Tridimensional Diagnostic Framework" class="rounded-2xl shadow-lg border" />
    </section>

    <section class="bg-white">
      <div class="mx-auto max-w-7xl px-4 py-16 grid gap-6 md:grid-cols-4">
        {features.map(f => <FeatureCard title={f.title} desc={f.desc} />)}
      </div>
    </section>

    <section class="py-16">    <div class="mx-auto max-w-5xl px-4 text-center">        <h2 class="text-3xl font-bold">A Tridimensional Approach</h2>        <p class="mt-4 text-lg text-slate-600">Our framework analyzes patients across three fundamental axes to build a complete picture.</p>        <div class="mt-8 grid gap-8 md:grid-cols-3">            <div class="text-center">                <h3 class="text-xl font-semibold">1.Etiology (The Cause)</h3>                <p class="text-slate-600 mt-2">Genetic predispositions and environmental root causes.</p>            </div>            <div class="text-center">                <h3 class="text-xl font-semibold">2. Pathophysiology (The Plot)</h3>                <p class="text-slate-600 mt-2">The underlying biological processes, profiled via multi-omics and biomarkers.</p>            </div>            <div class="text-center">                <h3 class="text-xl font-semibold">3. Phenotype (The Consequence)</h3>                <p class="text-slate-600 mt-2">The observable clinical symptoms and their neuroanatomical correlation.</p>            </div>        </div>    </div></section>
  </main>
  
  <Footer />
</BaseLayout>